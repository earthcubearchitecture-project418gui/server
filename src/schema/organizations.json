{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://earthcube.isti.com/ucar-json-ld.organization.schema.json",
  "title": "UCAR Dataset",
  "description": "",
  "type": "object",
  "required": [
    "@id",
    "legalName",
    "name",
    "url",
    "description",
    "contactPoint",
    "address",
    "funder"
  ],
  "groups" : { 
    "main": [ "@id", "legalName", "name", "url", "description", "category"],
    "contact": [ "contactPoint", "address" ],
    "info": [ "foundingData", "logo" ],
    "parent organizations": [ "parentOrganization" ] ,
    "associations": [ "memberOf" ],
    "funding agencies": [ "funder" ],
    "publishing": [ "publishingPrinciples" ]
  }, 

  "properties": {
    "@id": {
      "type": "string",
      "format": "uri"
    },
    "legalName": {
      "type": "string",
      "title": "FULL NAME",
      "description": "EXAMPLE: Biological and Chemical Data Management Office"
    },
    "name": {
      "type": "string",
      "title": "COMMON NAME",
      "description": "EXAMPLE: BCO-DMO"
    },
    "url": {
      "type": "string",
      "title": "URL",
      "description": "EXAMPLE: https://www.bco-dmo.org",
      "format": "uri"
    },
    "description": {
      "type": "string",
      "title": "DESCRIPTION",
      "description": "EXAMPLE: The BCO-DMO resource catalog offers free and open access to publicly funded research products whose field of study are biological and chemical oceanography"
    },
    "category": {
      "type": "array",
      "title": "DOMAIN",
      "description": "EXAMPLE: Biological Oceanograph",
      "items": {
        "type": "string"
      }
    },
    "sameAs": {
      "type": "array",
      "title": "ADDITIONAL LINK",
      "description": "EXAMPLE: https://twitter.com/BCODM",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "contactPoint": {
      "type": "array",
      "title": "PLACEHOLD",
      "description": "PLACEHOLD",
      "items": {
        "type": "object",
        "required": [
          "@type",
          "@id",
          "name",
          "email"
        ],
        "properties": {
          "@type": {
            "const": "ContactPoint"
          },
          "@id": {
            "type": "string",
            "title": "CONTACT URL",
            "description": "EXAMPLE: https://www.bco-dmo.org/about-u",
            "format": "uri"
          },
          "name": {
            "type": "string",
            "title": "CONTACT LABEL",
            "description": "EXAMPLE: Support"
          },
          "email": {
            "type": "string",
            "title": "CONTACT EMAIL",
            "description": "EXAMPLE: info@bco-dmo.org",
            "format": "email"
          },
          "url": {
            "type": "string",
            "title": "CONTACT URL",
            "description": "EXAMPLE: https:/www.bco-dmo.org/about-us",
            "format": "uri"
          },
          "contactType": {
            "type": "string",
            "title": "CONTACT TYPE",
            "description": "EXAMPLE: Customer Support"
          }
        }
      }
    },
    "address": {
      "type": "array",
      "title": "PLACEHOLD",
      "description": "PLACEHOLD",
      "items": {
        "type": "object",
        "required": [
          "@type",
          "streetAddress",
          "addressLocality",
          "addressRegion",
          "postalCode",
          "addressCountry"
        ],
        "properties": {
          "@type": {
            "const": "PostalAddress"
          },
          "streetAddress": {
            "type": "string",
            "title": "STREET ADDRESS",
            "description": "EXAMPLE: WHOI, MS#36, Shiverick House 11 School St"
          },
          "addressLocality": {
            "type": "string",
            "title": "CITY",
            "description": "EXAMPLE: Woods Holm"
          },
          "addressRegion": {
            "type": "string",
            "title": "STATE",
            "description": "EXAMPLE: MN"
          },
          "postalCode": {
            "type": "string",
            "title": "ZIP CODE",
            "description": "EXAMPLE: 02543" 
          },
          "addressCountry": {
            "type": "string",
            "title": "COUNTRY",
            "description": "EXAMPLE: US"
          }
        }
      }
    },
    "foundingData": {
      "type": "string",
      "title": "DATE OF INCEPTION",
      "description": "EXAMPLE: 2006-09-07",
      "format": "date-time"
    },
    "logo": {
      "type": "object",
      "title": "PLACEHOLD",
      "description": "PLACEHOLD",
      "required": [
        "@type",
        "url"
      ],
      "properties": {
        "@type": {
          "const": "ImageObject"
        },
        "url": {
          "type": "string",
          "title": "LOGO URL",
          "description": "EXAMPLE: https://www.bco-dmo.org/files/bcodmo/images/bco-dmo-words-BLUE.jp",
          "format": "uri"
        }
      }
    },
    "parentOrganization": {
      "type": "array",
      "title": "PLACEHOLD",
      "description": "PLACEHOLD",
      "items": {
        "type": "object",
        "required": [
          "@type",
          "@id",
          "legalName",
          "url"
        ],
        "properties": {
          "@type": {
            "const": "Organization"
          },
          "@id": {
            "type": "string",
            "title": "PARENT URL",
            "description": "EXAMPLE: http://www.nsf.gov | PARENT DOI URL, EXAMPLE: http://dx.doi.org/10.13039/1000000851",
            "format": "uri"
          },
          "legalName": {
            "type": "string",
            "title": "PARENT FULL NAME",
            "description": "EXAMPLE: Directorate for Geoscience"
          },
          "name": {
            "type": "string",
            "title": "PARENT COMMON NAME",
            "description": "EXAMPLE: NSF-GE"
          },
          "url": {
            "type": "string",
            "title": "PARENT URL",
            "description": "EXAMPLE: http://www.nsf.go",
            "format": "uri"
          },
          "address": {
            "type": "object",
            "title": "PLACEHOLD",
            "description": "PLACEHOLD",      
            "required": [
              "@type",
              "streetAddress",
              "addressLocality",
              "addressRegion",
              "postalCode",
              "addressCountry"
            ],
            "properties": {
              "@type": {
                "const": "PostalAddress"
              },              
              "streetAddress": {
                "type": "string",
                "title": "STREET ADDRESS",
                "description": "EXAMPLE: WHOI, MS#36, Shiverick House 11 School St"
              },
              "addressLocality": {
                "type": "string",
                "title": "CITY",
                "description": "EXAMPLE: Woods Holm"
              },
              "addressRegion": {
                "type": "string",
                "title": "STATE",
                "description": "EXAMPLE: MN"
              },
              "postalCode": {
                "type": "string",
                "title": "ZIP CODE",
                "description": "EXAMPLE: 02543" 
              },
              "addressCountry": {
                "type": "string",
                "title": "COUNTRY",
                "description": "EXAMPLE: US"
              }
            }
          }
        }
      }
    },
    "memberOf": {
      "type": "array",
      "title": "PLACEHOLD",
      "description": "PLACEHOLD",
      "items": {
        "type": "object",
        "required": [
          "@type",
          "programName"
        ],
        "properties": {
          "@type": {
            "const": "ProgramMembership"
          },
          "programName": {
            "type": "string",
            "title": "PROGRAM NAME",
            "description": "EXAMPLE: EarthCube CDF Registrar"
          },
          "hostingOrganization": {
            "type": "object",
            "title": "PLACEHOLD",
            "description": "PLACEHOLD",      
            "required": [
              "@type",
              "name",
              "uri"
            ],
            "properties": {
              "@type": {
                "const": "Organization"
              },
              "name": {
                "type": "string",
                "title": "HOSTING ORGANIZATION",
                "description": "EXAMPLE: RE3Data"
              },
              "url": {
                "type": "string",
                "title": "HOSTING ORGANIZATION URL",
                "description": "EXAMPLE: http://www.re3data.org",
                "format": "uri"
              }
            }
          }
        }
      }
    },
    "funder": {
      "type": "array",
      "title": "Funders",
      "description": "PLACEHOLD",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "@type",
          "@id",
          "legalName",
          "url"
        ],
        "properties": {
          "@type": {
            "const": "Organization"
          },
          "@id": {
            "type": "string",   
            "title": "FUNDER URL",
            "description": "EXAMPLE: https://www.nsf.gov/div/index.jsp?div=OCE",      
            "format": "uri"
          },
          "legalName": {
            "type": "string",
            "title": "FUNDER FULL NAME",
            "description": "EXAMPLE: Division of Ocean Science"
          },
          "name": {
            "type": "string",
            "title": "FUNDER COMMON NAME",
            "description": "EXAMPLE: OC"
          },
          "url": {
            "type": "string",
            "title": "FUNDER URL",
            "description": "EXAMPLE: https://www.nsf.gov/div/index.jsp?div=OC",
            "format": "uri"
          },
          "identifier": {
            "type": "object",
            "required": [
              "@type",
              "value",
              "url"
            ],
            "properties": {
              "@type": {
                "const": "PropertyValue"
              },
              "value": {
                "type": "string",
                "title": "FUNDER DOI",
                "description": "EXAMPLE: 10.13039/10000014"
              },
              "url": {
                "type": "string",
                "title": "FUNDER DOI URL",
                "description": "EXAMPLE: https://doi.org/10.13039/10000014",
                "format": "uri"
              }
            }
          }
        }
      }
    },
    "publishingPrinciples": {
      "type": "array",
      "title": "PLACEHOLD",
      "description": "PLACEHOLD",   
      "items": {
        "type": "object",
        "required": [
          "@type",
          "name",
          "url"
        ],
        "properties": {
          "@type": {
            "const": "DigitalDocument"
          },
          "name": {
            "type": "string",
            "title": "COMMON NAME",
            "description": "EXAMPLE: Terms of Us"
          },
          "url": {
            "type": "string",
            "title": "URL",
            "description": "EXAMPLE: https://help.hydroshare.org/about-hydroshare/policies/terms-of-use",
            "format": "uri"
          },
          "fileFormat": {
            "type": "string",
            "title": "PLACEHOLD",
            "description": "EXAMPLE: text/html",
            "format": "MimeType"
          }
        }
      }
    }
  }
}