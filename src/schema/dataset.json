{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://earthcube.isti.com/ucar-json-ld.dataset.schema.json",
  "title": "UCAR Dataset",
  "description": "",
  "type": "object",
  "required": [
    "@type",
    "@id",
    "name",
    "url",
    "description",
    "isAccessibleForFree",
    "keywords",
    "provider"
  ],
  "properties": {
    "@type": {
      "const": "Dataset"
    },
    "@id": {
      "type": "string",
      "format": "uri",
      "group": "main"
    },
    "name": {
      "type": "string",
      "group": "main"
    },
    "alternateType": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "alternateName": {
      "type": "string",
      "group": "main"
    },
    "url": {
      "type": "string",
      "group": "main",
      "format": "uri"
    },
    "description": {
      "type": "string",
      "group": "main"
    },
    "version": {
      "type": "string",
      "group": "main"
    },
    "isAccessibleForFree": {
      "type": "boolean",
      "group": "main"
    },
    "keywords": {
      "type": "string",
      "group": "main"
    },
    "license": {
      "type": "string",
      "group": "main",
      "format": "uri"
    },
    "citation": {
      "type": "string",
      "group": "main"
    },
    "includedInDataCatalog": {
      "type": "object",
      "group": "main",
      "required": [
        "@id"
      ],
      "properties": {
        "@id": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "distribution": {
      "type": "object",
      "group": "publishing",
      "required": [
        "@type",
        "contentUrl",
        "encodingFormat"
      ],
      "properties": {
        "@type": {
          "const": "DataDownload"
        },
        "contentUrl": {
          "type": "string",
          "format": "uri"
        },
        "encodingFormat": {
          "type": "string",
          "format": "MimeType"
        }
      }
    },
    "provider": {
      "type": "object",
      "group": "publishing",
      "required": [
        "@type",
        "@id",
        "legalName",
        "url"
      ],
      "properties": {
        "@type": {
          "const": "Organization"
        },
        "@id": {
          "type": "string"
        },
        "additionalType": {
          "type": "string",
          "format": "uri"
        },
        "legalName": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "publisher": {
      "type": "object",
      "group": "publishing",
      "required": [
        "@type",
        "@id",
        "name",
        "url"
      ],
      "properties": {
        "@type": {
          "const": "Organization"
        },
        "@id": {
          "type": "string",
          "format": "uri"
        },
        "description": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "creator": {
      "description": "Creator (Role)",
      "type": "array",
      "group": "authors",
      "items": {
        "type": "object",
        "required": [
          "@type",
          "@id",
          "creator"
        ],
        "properties": {
          "@type": {
            "const": "Role"
          },
          "@id": {
            "type": "string",
            "format": "uri"
          },
          "additionalType": {
            "type": "string",
            "format": "uri"
          },
          "roleName": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "creator": {
            "description": "Creator (Person)",
            "type": "object",
            "required": [
              "@type",
              "@id",
              "name"
            ],
            "properties": {
              "@type": {
                "const": "Person"
              },
              "@id": {
                "type": "string",
                "format": "uri"
              },
              "additionalType": {
                "type": "string",
                "format": "uri"
              },
              "name": {
                "type": "string"
              },
              "givenName": {
                "type": "string"
              },
              "familyName": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "identifier": {
                "type": "object",
                "required": [
                  "@type",
                  "url",
                  "value"
                ],
                "properties": {
                  "@type": {
                    "const": "PropertyValue"
                  },
                  "url": {
                    "type": "string",
                    "format": "uri"
                  },
                  "value": {
                    "type": "string"
                  },
                  "additionalType": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "uri"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "spatialCoverage": {
      "type": "array",
      "group": "spatial coverage",
      "items": {
        "type": "object",
        "required": [
          "@type",
          "geo"
        ],
        "properties": {
          "@type": {
            "const": "Place"
          },
          "name": {
            "type": "string"
          },
          "geo": {
            "type": "array",
            "minItems": 1,
            "items": {
              "anyOf": [
                {
                  "type": "object",
                  "description": "GeoCoordinate",
                  "required": [
                    "@type",
                    "latitude",
                    "longitude",
                    "elevation"
                  ],
                  "properties": {
                    "@type": {
                      "const": "GeoCoordinates"
                    },
                    "latitude": {
                      "type": "number",
                      "minimum": -90,
                      "maximum": 90
                    },
                    "longitude": {
                      "type": "number",
                      "minimum": -180,
                      "maximum": 180
                    },
                    "elevation": {
                      "type": "number"
                    }
                  }
                },
                {
                  "type": "object",
                  "description": "GeoShape",
                  "required": [
                    "@type",
                    "polygon"
                  ],
                  "properties": {
                    "@type": {
                      "const": "GeoShape"
                    },
                    "box": {
                      "type": "string",
                      "format": "box"
                    },
                    "polygon": {
                      "type": "string",
                      "format": "polygon"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    },
    "variableMeasured": {
      "type": "array",
      "group": "measurements",
      "items": {
        "type": "object",
        "required": [
          "@type",
          "@id",
          "name",
          "unitText"
        ],
        "properties": {
          "@type": {
            "const": "PropertyValue"
          },
          "@id": {
            "type": "string",
            "format": "uri"
          },
          "description": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "name": {
            "type": "string"
          },
          "unitText": {
            "type": "string"
          }
        }
      },
      "measurementTechnique": {
        "type": "array",
        "group": "measurements",
        "items": {
          "type": "string"
        }
      }
    }
  }
}