{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://earthcube.isti.com/ucar-json-ld.dataset.schema.json",
  "title": "UCAR Dataset",
  "description": "",
  "type": "object",
  "required": [
    "@type",
    "@id",
    "name",
    "url",
    "description",
    "isAccessibleForFree",
    "keywords",
    "provider"
  ],
  "groups": {
    "main" : [ "@id", "name", "alternateName", "url", "description", "version", "isAccessibleForFree", "keywords", "license", "citation", "includedInDataCatalog"],
    "publishing" : [ "distribution", "provider", "publisher" ],
    "authors" : [ "creator" ],
    "spatial coverage" : [ "spatial coverage" ],
    "measurements" : [ "variableMeasured", "measurementTechnique" ]
  },
  "properties": {
    "@type": {
      "const": "Dataset"
    },
    "@id": {
      "type": "string",
      "format": "uri"
    },
    "name": {
      "type": "string",
      "title": "COMMON NAME",
      "description": ", EXAMPLE: LNWB Ch07 Water Management - Agricultural water use - date"
      },
    "alternateType": {
      "type": "array",
      "title": "PLACEHOLD",
      "description": "EXAMPLE : http://vivoweb.org/ontology/core#Dataset",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "alternateName": {
      "type": "string",
      "title": "Alternate Name",
      "description": "EXAMPLE: NE15_AlexanderB"
    },
    "url": {
      "type": "string",
      "title": "DATASET URL or DOI URL",
      "description": "EXAMPLE : http://opencoredata.org/id/dataset/00cd2c07-ff21-4ceb-8595-c6572eda55e9",
      "format": "uri"
    },
    "description": {
      "type": "string",
      "title": "PLACEHOLD",
      "description": ", EXAMPLE: Overview: Agricultural water use includes the irrigation of croplands and the water needs of dairy farms"
    },
    "version": {
      "type": "string",
      "title": "Date or semvar",
      "description": "EXAMPLE: 2017-06-04 | VERSION NUMBER, EXAMPLE: v1.2.2"
    },
    "isAccessibleForFree": {
      "type": "boolean",
      "title": "PLACEHOLD",
      "description": "PLACEHOLD"
    },
    "keywords": {
      "type": "string",
      "title": "Use comma delimited keywords",
      "description": "EXAMPLE: ocean acidification, OA, Dissolved Organic Carbon, DOC, bacterioplankton respiration, pCO2, carbon dioxide"
    },
    "license": {
      "type": "string",
      "title": "LICENSE URL",
      "description": "EXAMPLE: http://creativecommons.org/licenses/by/4.0",
      "format": "uri"
    },
    "citation": {
      "type": "string",
      "title": "PLACEHOLD",
      "description": "EXAMPLE: Peter Spooner, Nivedita Thiagarajan, Weifu Guo, Katherine R. Hendry, Melanie J. Leng, Laura F. Robinson, Brad E. Rosenheim (2017), Clumped isotope composition of modern cold-water corals. Interdisciplinary Earth Data Alliance (IEDA). doi:10.1594/IEDA/10070"
    },
    "includedInDataCatalog": {
      "type": "object",
      "required": [
        "@id"
      ],
      "properties": {
        "@id": {
          "type": "string",
          "title": "CATALOG URL",
          "description": "EXAMPLE: https://www.hydroshare.org",
          "format": "uri"
        }
      }
    },
    "distribution": {
      "type": "object",
      "title": "PLACEHOLD",
      "description": "PLACEHOLD",
      "required": [
        "@type",
        "contentUrl",
        "encodingFormat"
      ],
      "properties": {
        "@type": {
          "const": "DataDownload"
        },
        "contentUrl": {
          "type": "string",
          "title": "DOWNLOAD URL",
          "description": "EXAMPLE: https://www.hydroshare.org/hsapi/resource/8f361f21f9884c4b883a7b9d723155bcc",
          "format": "uri"
        },
        "encodingFormat": {
          "type": "string",
          "title": "MIME type",
          "description": "EXAMPLE: application/zip",
          "format": "MimeType"
        }
      }
    },
    "provider": {
      "type": "object",
      "title": "PLACEHOLD",
      "description": "PLACEHOLD",
      "required": [
        "@type",
        "@id",
        "legalName",
        "url"
      ],
      "properties": {
        "@type": {
          "const": "Organization"
        },
        "@id": {
          "type": "string",
          "title": "PROVIDER URL",
          "description": "EXAMPLE: https://www.hydroshare.org",
          "format": "uri"    
        },
        "additionalType": {
          "type": "string",
          "title": "PLACEHOLD",
          "description": "EXAMPLE : http://schema.geolink.org/1.0/base/main#Organization",    
          "format": "uri"
        },
        "legalName": {
          "type": "string",
          "title": "Full Name",
          "description": "EXAMPLE: Biological and Chemical Data Management Office"
        },
        "name": {
          "type": "string",
          "title": "COMMON NAME",
          "description": "EXAMPLE: BCO-DM"
        },
        "url": {
          "type": "string",
          "title": "PROVIDER URL",
          "description": ", EXAMPLE: https://www.hydroshare.org",
          "format": "uri"
        }
      }
    },
    "publisher": {
      "type": "object",
      "title": "PLACEHOLD",
      "description": "PLACEHOLD",
      "required": [
        "@type",
        "@id",
        "name",
        "url"
      ],
      "properties": {
        "@type": {
          "const": "Organization"
        },
        "@id": {
          "type": "string",
          "title": "PUBLISHER URL",
          "description": "EXAMPLE: https://csdco.umn.edu/",    
          "format": "uri"
        },
        "description": {
          "type": "string",
          "title": "PUBLISHER DESCRIPTION",
          "description": "EXAMPLE: Continental Scientific Drilling Coordination Office"
        },
        "url": {
          "type": "string",
          "title": "PUBLISHER URL",
          "description": "EXAMPLE: https://csdco.umn.edu/",
          "format": "uri"
        },
        "name": {
          "type": "string",
          "title": "PUBLISHER COMMON NAME",
          "description": "EXAMPLE: CSDC"
        }
      }
    },
    "creator": {
      "type": "array",
      "title": "Creator (Role)",
      "description" : "PLACEHOLD",
      "items": {
        "type": "object",
        "required": [
          "@type",
          "@id",
          "creator"
        ],
        "properties": {
          "@type": {
            "const": "Role"
          },
          "@id": {
            "type": "string",
            "title": "ROLE URL",
            "description": "EXAMPLE : http://lod.bco-dmo.org/id/person-role/472032",      
            "format": "uri"
          },
          "additionalType": {
            "type": "string",
            "title": "PLACEHOLD",
            "description": "EXAMPLE : http://schema.geolink.org/1.0/base/main#Participants",      
            "format": "uri"
          },
          "roleName": {
            "type": "string",
            "title": "TYPE OF ROLE",
            "description": "EXAMPLE: Principal Investigator, Author"
          },
          "url": {
            "type": "string",
            "title": "ROLE URL",
            "description": "EXAMPLE: http://lod.bco-dmo.org/id/person-role/47203",
            "format": "uri"
          },
          "creator": {
            "type": "object",
            "title": "Creator (Person)",
            "description": "PLACEHOLD",  
            "required": [
              "@type",
              "@id",
              "name"
            ],
            "properties": {
              "@type": {
                "const": "Person"
              },
              "@id": {
                "type": "string",
                "title": "PERSON URL",
                "description": "EXAMPLE : https://www.bco-dmo.org/person/5131",        
                "format": "uri"
              },
              "additionalType": {
                "type": "string",
                "title": "PLACEHOLD",
                "description": "EXAMPLE : http://schema.geolink.org/1.0/base/main#Person",      
                "format": "uri"
              },
              "name": {
                "type": "string",
                "title": "FULL NAME",
                "description": "EXAMPLE: Dr. Uta Passo"
              },
              "givenName": {
                "type": "string",
                "title": "FIRST NAME",
                "description": "EXAMPLE: Ut"
              },
              "familyName": {
                "type": "string",
                "title": "LAST NAME",
                "description": "EXAMPLE: Passo"
              },
              "url": {
                "type": "string",
                "title": "PERSON URL",
                "description": "EXAMPLE: https://www.bco-dmo.org/person/5131",
                "format": "uri"
              },
              "identifier": {
                "type": "object",
                "title": "PLACEHOLD",
                "description": "PLACEHOLD",          
                "required": [
                  "@type",
                  "url",
                  "value"
                ],
                "properties": {
                  "@type": {
                    "const": "PropertyValue"
                  },
                  "url": {
                    "type": "string",
                    "title": "ORCID URL",
                    "description": "EXAMPLE: https://orcid.org/0000-0003-2591-5292",
                    "format": "uri"
                  },
                  "value": {
                    "type": "string",
                    "title": "ORCID VALUE",
                    "description": "EXAMPLE: 0000-0003-2591-529"
                  },
                  "additionalType": {
                    "type": "array",
                    "title": "PLACEHOLD",
                    "description": "EXAMPLE : http://purl.org/spar/datacite/Identifier",
                    "items": {
                      "type": "string",
                      "format": "uri"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "spatialCoverage": {
      "type": "array",
      "title": "PLACEHOLD",
      "description": "PLACEHOLD",
      "items": {
        "type": "object",
        "required": [
          "@type",
          "geo"
        ],
        "properties": {
          "@type": {
            "const": "Place"
          },
          "name": {
            "type": "string",
            "title": "NAME OF PLACE",
            "description": "EXAMPLE: Falling Water Falls [3PP40] vertebrate fauna dataset"
          },
          "geo": {
            "type": "array",
            "minItems": 1,
            "items": {
              "anyOf": [
                {
                  "type": "object",
                  "title": "GeoCoordinate",
                  "description": "PLACEHOLD",
                  "required": [
                    "@type",
                    "latitude",
                    "longitude"
                  ],
                  "properties": {
                    "@type": {
                      "const": "GeoCoordinates"
                    },
                    "latitude": {
                      "type": "number",
                      "minimum": -90,
                      "maximum": 90
                    },
                    "longitude": {
                      "type": "number",
                      "minimum": -180,
                      "maximum": 180
                    },
                    "elevation": {
                      "type": "number"
                    }
                  }
                },
                {
                  "type": "object",
                  "title": "PLACEHOLD",
                  "description": "GeoShape",
                  "required": [
                    "@type",
                    "polygon"
                  ],
                  "properties": {
                    "@type": {
                      "const": "GeoShape"
                    },
                    "box": {
                      "type": "string",
                      "title": "BOUNDING BOX",
                      "description": "EXAMPLE: -149.8727,-17.45 -64.6353,34.40",            
                      "format": "box"
                    },
                    "polygon": {
                      "type": "string",
                      "title": "POLYGON VERTICES",
                      "description": "EXAMPLE: -149.8727,-17.45 -149.8727,34.407 -64.6353,34.407 -64.6353,-17.45 -149.8727,-17.4",            
                      "format": "polygon"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    },
    "variableMeasured": {
      "type": "array",
      "title": "PLACEHOLD",
      "description": "PLACEHOLD",
      "items": {
        "type": "object",
        "required": [
          "@type",
          "@id",
          "name",
          "unitText"
        ],
        "properties": {
          "@type": {
            "const": "PropertyValue"
          },
          "@id": {
            "type": "string",
            "title": "URL DESCRIBING PARAMETER",
            "description": "EXAMPLE: https://www.bco-dmo.org/dataset-parameter/66578",
            "format": "uri"
          },
          "description": {
            "type": "string",
            "title": "PROPERTY DESCRIPTION",
            "description": "EXAMPLE: Number identifying the cruise"
          },
          "url": {
            "type": "string",
            "title": "URL",
            "description": "URL DESCRIBING PARAMETER",
            "examples": ["https://www.bco-dmo.org/dataset-parameter/66578"],
            "format": "uri"
          },
          "name": {
            "type": "string",
            "title": "PROPERTY NAME",
            "description": "EXAMPLE: Leg, target_pCO"
          },
          "unitText": {
            "type": "string",
            "title": "UNIT DESCRIPTOR",
            "description": "EXAMPLE: int64, string, parts per million (ppm)"
          }
        }
      },
      "measurementTechnique": {
        "type": "array",
        "title": "MEASUREMENT TECHNIQUE",
        "description": "EXAMPLE: Shimadzu TOC-V Analyze",
        "items": {
          "type": "string"
        }
      }
    }
  }
}